<div class="row">
    <form class="form-horizontal" method="POST" id="form_login"> 
        <div class="form-group">
            <label for="user" class="col-sm-5 control-label">Usuario</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="user" name="user">
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="col-sm-5 control-label">Password</label>
            <div class="col-sm-4">
                <input type="password" class="form-control" id="password" name="password">
            </div>
        </div>
        <center> 
            <button id="loggin" type="button" class="btn btn-primary">Loggin</button>
        </center>
    </form>
    
</div>

<script type="text/javascript"> 
    var url_save = "<?php echo $this->url('save') ?>";
    
    $(document).ready(function(){
        $("#loggin").click(function(){
            var o_form = new Object();
            o_form.user = $("#user").val();
            o_form.password = $("#password").val();
            $.ajax({
                url:'/application/index/loggin'
                ,data:{form:o_form}
                ,type:'POST'
                ,datatype:'json'
                ,async:true
                ,success:function(response){
                  $(location).attr('href',"<?php echo $this->url('form') ?>");                 
                }
            });  
        });
    });

</script>